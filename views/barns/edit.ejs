<%- include('../partials/header') %>

<form id="edit-barn-form" action="/barns/<%= barn.id %>?_method=PUT" method="POST">

    <div class="form-row">
        
        <div class="form-group col-md-6">
            <label for="name">Barn Name</label>
            <input type="text" class="form-control" id="name" value="<%= barn.name %>" placeholder="<%= barn.name %>">
        </div>

        </div>
        <div class="form-group">
        <label for="streetAddress">Address</label>
        <input type="text" class="form-control" id="streetAddress" value="<%= barn.address[0].houseNumber %>" placeholder="<%= barn.address[0].houseNumber %>">
        </div>

        <div class="form-row">
        <div class="form-group col-md-6">
            <label for="city">City</label>
            <input type="text" class="form-control" id="city" value="<%= barn.address[0].city %>" placeholder="<%= barn.address[0].city %>">
        </div>

        <div class="form-group col-md-4">
            <label for="state">State</label>
            <input type="text" class="form-control" id="state" value="<%= barn.address[0].state %>" placeholder="<%= barn.address[0].state %>">
        </div>

        <div class="form-group col-md-2">
            <label for="zip">Zip</label>
            <input type="text" class="form-control" id="zip" value="<%= barn.address[0].zip %>" placeholder="<%= barn.address[0].zip %>">
        </div>
        
        <button type="submit" class="btn" value="Update">Update</button>

</form>

<%- include('../partials/footer') %>
