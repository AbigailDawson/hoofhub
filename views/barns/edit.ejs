<%- include('../partials/header') %>

<div class="container mt-5 mb-5">
    <a class="btn btn-sm mb-3" href="/barns" role="button">Go back</a>
    
    <h2 class="mb-3">Address</h2>
    <form id="edit-barn-form" action="/barns/<%= barn.id %>?_method=PUT" method="POST">

        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="name">Barn Name</label>
                <input type="text" class="form-control" id="name" value="<%= barn.name %>" placeholder="<%= barn.name %>">
            </div>
        </div>
        <div class="form-row col-md-12">
            <div class="form-group">
                <label for="streetAddress">Address</label>
                <input type="text" class="form-control" id="streetAddress" value="<%= barn.address[0].streetAddress %>" placeholder="<%= barn.address[0].streetAddress %>">
            </div>
        </div>

        <div class="form-row d-flex flex-column flex-md-row">
            <div class="form-group col-12 col-md-6">
                <label for="city">City</label>
                <input type="text" class="form-control" id="city" value="<%= barn.address[0].city %>" placeholder="<%= barn.address[0].city %>">
            </div>

            <div class="form-group col-12 col-md-4">
                <label for="state">State</label>
                <input type="text" class="form-control" id="state" value="<%= barn.address[0].state %>" placeholder="<%= barn.address[0].state %>">
            </div>

            <div class="form-group col-12 col-md-2">
                <label for="zip">Zip</label>
                <input type="text" class="form-control" id="zip" value="<%= barn.address[0].zip %>" placeholder="<%= barn.address[0].zip %>">
            </div>
        </div>
        <div class="form-row mt-3">
            <button type="submit" class="btn" value="Update">Update</button>
        </div>

    </form>

    <h2 class="mb-3 mt-5">Horses</h2>

    <div class="card w-100">
        <ul class="list-group list-group-flush horse-list">
            <% barn.horses.forEach((horse) => { %>

            <li class="list-group-item"><%= horse.name %></li>
            
            <% }) %>
        </ul>
      </div>

    <h5 class="mt-2">Add a Horse</h5>

    <form id="add-horse" action="/barns/<%= barn._id %>/horses" method="POST">

        <select class="form-control form-control-md" name="horseId">
            <% if (horses.length) { %>
                <%- horses.map(horse => 
                `<option value="${horse._id}">${horse.name}</option>`
                ).join('') %>
            <% } else { %>
                <option>No horses available to add</option>
            <% } %>
            
        </select>

        <button type="submit" class="btn mt-3">Add Horse</button> 

    </form>

    <br><br>

    <form action="/barns/<%= barn.id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-sm mt-3">Remove Barn</button> 
        <p>This action cannot be undone.</p>
    </form>
    

</div>

<%- include('../partials/footer') %>
