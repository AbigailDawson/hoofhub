<%- include('../partials/header') %>

<form action="/horses" method="GET">
    <input type="text" name="search" placeholder="Search by horse's name">
    <button type="submit">Search</button>
</form>
<% if (!showAllLink) { %>
    <a href="/horses" class="btn btn-secondary">Show All Horses</a>
<% } %>

<p>Sort by:</p>
<a href='/horses?sort=name'>Name</a>
<a href='/horses?sort=age'>Age</a>

<div class="container mt-5">
    <% horses.forEach((horse) => { %>
    <div class="row horse-detail-card">
        <div class="col-6">
            <h2 class="mb-2"><%= horse.name %> </h2>
            <h4 class="mb-2"><%= horse.age %> year old <%= horse.color %> <%= horse.sex %> 
        </div>
        <div class="col-6">
            <a class="btn" href="/horses/<%= horse.id %>">See Details</a>
        </div>
    </div>
       
    <% }) %>

</div>
  
<a href="/horses/new">Add a Horse</a>

<%- include('../partials/footer') %>
