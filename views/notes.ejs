<h3>Address</h3>
    <p> <%= barn.address[0].houseNumber %> <%= barn.address[0].street %></p>
    <p> <%= barn.address[0].city %>, <%= barn.address[0].state %> <%= barn.address[0].zip %></p>

<a href="/barns/<%= barn._id %>/edit">Update Name and Address</a>

<h3>Chores</h3>
<ul>
<% barn.chores.forEach((chore) => { %>
    <li><%= chore.chore %></li>
<% }) %>
</ul>

<h3>Contact</h3>
<% if(barn.contact.length) { %>
<p><%= contact.firstName %> <%= contact.lastName %></p>
<% } else { %>
    <p>No Contacts Yet</p>
<% } %>

<form id="add-contact" action="/barns/<%= barn._id %>" method="POST">
    <select name="contactId">
        <%- contacts.map(contact => 
        `<option value="${contact._id}">${contact.firstName} ${contact.lastName}</option>`
        ).join('') %>
    </select>
    <button>Add Contact</button> 
</form>


<h3>Notes</h3>
<% if(barn.notes.length) { %>
    <p><%= barn.notes[0].content %></p>
<% } else { %>
    <p>No Notes Yet</p>
<% } %>


<br><br>



<% barn.horses.forEach((horse) => { %>

    <div class="horse-detail-card">
        <div class="row">
            <div class="col-12 col-md-3">
                <h2 class="mb-2"><%= horse.name %> </h2>
                <h4 class="mb-2"><%= horse.age %> year old <%= horse.color %> <%= horse.sex %>  </h4>
                <h3>Contacts</h3>
                <% if (horse.contacts.length) { %>
                    <% horse.contacts.forEach((contact) => { %>
                        <p><%= contact.role %>: <%= contact.firstName %><%= contact.lastName %></p>
                        <p><%= contact.phone %></p>
                        <p><%= contact.email %></p>
                    <% }) %>
                    <% } else { %>
                    <p>This horse has no contacts.</p>
                    <% } %>
                
            </div>
            <div class="col-12 col-md-4">
                <h3>Feed</h3>
                <% horse.feed.forEach((feed) => { %>
                    <p><strong>AM Feed: </strong> <%= feed.amFeed %></p>
                    <p><strong>AM Meds: </strong> <%= feed.amMeds %></p>
                    <p><strong>Midday Feed: </strong> <%= feed.middayFeed %></p>
                    <p><strong>PM Feed: </strong> <%= feed.pmFeed %></p>
                    <p><strong>PM Meds: </strong> <%= feed.pmMeds %></p>
                    <p><strong>Night Feed: </strong> <%= feed.nightFeed %></p>
                <% }) %>
                <h3>Turnout</h3>
                <p>Turnout: <%= horse.turnout %></p>
                <p>Blankets: <%= horse.blanket %></p>
            </div>
            <div class="col-12 col-md-5">
                <h3>Horse Notes</h3>
                <p><%= horse.importantInfo %></p>
                <% horse.notes.forEach((note) => { %>
                    <p><%= note.dateAdded %></p>
                    <p><%= note.content %></p>
                <% }) %>
            </div>
        </div>
    </div>
    
    <% }) %>