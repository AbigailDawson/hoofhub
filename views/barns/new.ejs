<%- include('../partials/header') %>

<div class="container mt-5 mb-5">
    <a class="btn btn-sm mb-3" href="/barns" role="button">Go back</a>
    
    <h2 class="mb-3">Address</h2>
    <form id="new-barn-form" action="/barns" method="POST">

        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="name">Barn Name</label>
                <input name="name" type="text" class="form-control" id="name">
            </div>
        </div>
        <div class="form-row col-md-12">
            <div class="form-group">
                <label for="streetAddress">Address</label>
                <input name="streetAddress" type="text" class="form-control" id="streetAddress">
            </div>
        </div>

        <div class="form-row d-flex flex-column flex-md-row">
            <div class="form-group col-12 col-md-6">
                <label for="city">City</label>
                <input name="city" type="text" class="form-control" id="city">
            </div>

            <div class="form-group col-12 col-md-4">
                <label for="state">State</label>
                <input name="state" type="text" class="form-control" id="state">
            </div>

            <div class="form-group col-12 col-md-2">
                <label for="zip">Zip</label>
                <input name="zip" type="text" class="form-control" id="zip">
            </div>
        </div>

        <h2 class="mb-3">Contact</h2>
        <div class="form-row">
            <div class="form-group col-12 col-md-4">
                <label for="role">Role</label>
                <input name="role" type="text" class="form-control" id="role">
            </div>
            <div class="form-group col-12 col-md-4">
                <label for="contactName">Name</label>
                <input name="contactName" type="text" class="form-control" id="contactName">
            </div>
            <div class="form-group col-12 col-md-4">
                <label for="phone">Phone Number</label>
                <input name="phone" type="text" class="form-control" id="phone">
            </div>
        </div>
        
        <div class="form-row mt-3">
            <button type="submit" class="btn" value="Add">Add</button>
        </div>
    </form>

</div>

<%- include('../partials/footer') %>
